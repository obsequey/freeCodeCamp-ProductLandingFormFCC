font = 'Roboto', sans-serif
ordinary_color = #fff8e1
helping_color =  #ffe082
accent_color =  #ffb300
*
  box-sizing border-box
  margin 0
  padding 0
  list-style none
  text-decoration none
  color black
html
  text-align center
  font-size 14px
  font-family font
  background-color ordinary_color
body
  padding-top 12rem
  @media (min-width 601px)
    padding-top 8rem

.nav
  position fixed
  padding 1rem
  top 0
  left 0
  background-color ordinary_color
  z-index 20
  width 100%
  display flex
  justify-content center
  flex-direction column
  @media (min-width: 601px)
    flex-direction row
    justify-content center
    align-items center
  &__logo
    padding 1rem
    flex 1
    @media (min-width 651px)
      flex 4
  &__menu
    flex 1
    @media (min-width 651px)
      flex 3
    &__list
      @media (min-width 651px)
        display flex
      &__item
        margin-bottom .5rem
        @media (min-width 651px)
          margin 0 1rem 0 0
main
  @media (min-width 560px)
    padding 0 .5rem
  .news
    &__heading
      width 18rem
      margin 0 auto 1rem auto
      @media (min-width: 430px)
        width auto
    &__form
      display flex
      flex-direction column
      &__input-mail
        margin 0 auto
        padding .5rem
        width 18rem
      &__submit-mail
        margin 1rem auto
        padding .5rem
        width 10rem
        border none
        background-color: helping_color
        text-transform: uppercase
        font-weight bold
        cursor pointer
        border-radius 3px
        transition background-color .3s ease-in-out
        &:hover
          background-color accent_color
  .pluses
    margin-bottom 4rem
    &__section
      margin 3rem auto
      display flex
      justify-content center
      &__left
        display none
        font-size 3rem
        i
          color accent_color
          height 3rem
          margin auto
        @media (min-width: 550px)
          display flex
          flex 1
        @media (min-width 930px)
          max-width 200px
      &__right
        display flex
        flex-direction column
        flex 4
        @media (min-width: 550px)
          text-align left
          @media (min-width 1000px)
            max-width 800px
        &__header
          margin 0
        &__body
          margin 0
  .video
    display flex
    margin-bottom 3rem
    &__main
      width 100%
      margin 0 auto
      @media (min-width 560px)
        width 560px
  .positions
    display flex
    flex-direction column
    margin-bottom 3rem
    @media (min-width 801px)
      flex-direction row
    &__card
      border 1px solid black
      border-radius 3px
      width 18rem
      margin 1rem auto
      @media (min-width 801px)
        width 30%
      &__header
        background-color helping_color
        padding 1rem
        text-transform uppercase
        font-size 1rem
        font-weight: normal
      &__price
        padding 1rem
        font-size: 2rem
      &__description
        &__item
          margin-bottom 1rem
      &__btn
        padding .5rem 1rem
        text-transform uppercase
        border none
        background-color helping_color
        transition background-color .3s ease-in-out
        cursor pointer
        margin 1rem
        border-radius 3px
        &:hover
          background-color accent_color
.footer
  background-color helping_color
  padding 1rem
  &__information
    margin-bottom 1rem
    &__nav
      display flex
      justify-content center
      &__item
        margin 0 1rem